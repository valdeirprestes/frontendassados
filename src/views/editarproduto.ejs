<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("includes/assets"); %>
    <link href="/public/assets/css/editarproduto.css" rel="stylesheet"/>
    <!-- Se quiser fazer um CSS personalizado desta pagina-->
    <!-- <link href="/public/assets/css/meucsspersonalizado.css" rel="stylesheet"/> -->
    <title>Editar Produto</title>  <!--Não se esqueça de alterar o nome do titulo-->
</head>
<body>
    <div class="main">
        <%- include("includes/menubar"); %>
            <div class="div_unica">
                
                <div class="div_form cadastrarusuario">
                   
                    <h1>Atualizar Produto</h1>  
                    <p></p>
                    <hr>
                <% if(locals.produto) { %>    
                <form method="post" action="/produto/listar" class="class-form-editarproduto" autofill="off">
                    <input type="hidden" value="<%= produto.id %>" name="id">
                    <div class="form-group">
                      <span class="erros" name="erros"></span>
                    </div>
                    
                <div class="form-group">
                      
                      <label for="nome">Nome:</label>
                      <span class="erros" name="nome"></span>
                      <input type="text" name="nome" class="form-control" value="<%= produto.nome %>" placeholder=" ">
                </div>
                <div class="form-group">
                      
                      <label for="preco">Preço:</label>
                      <span class="erros" name="preco"></span>
                      <input type="text" name="preco" class="form-control" value="<%= produto.preco %>" placeholder=" ">
                </div>
                <div class="form-group">
                    <label for="fechamento">Item de Fechamento:</label>
                    <select name="fechamento">
                    <% if(produto.item_fechamento == "SIM") { %>
                        <option   value="SIM" selected>Sim</option>
                        <option   value="NAO">Não</option>
                    <% } else { %>
                        <option   value="SIM">Sim</option>
                        <option   value="NAO" selected>Não</option>
                    <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="categoria">Categoria:</label>
                    <% if(locals.categoria) { %>
                        <select name="categoria">
                            <% categoria.forEach(categoria => { %>
                                <% if(produto.categoria.id == categoria.id) { %>
                                    <option   value="<%= categoria.id %>" selected><%= categoria.nome %></option>
                                <% } else { %>
                                    <option   value="<%= categoria.id %>"><%= categoria.nome %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    <% } %>
                </div>
                    
                    <button class="botao">Atualizar</button>
                </form>
                
                
                <p>Data de atualização: <%= produto.updated_at %></p>
                <% } %>
            </div>
    </div>
    <%- include("includes/footer"); %>
</body>
</html>