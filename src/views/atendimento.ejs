<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("includes/assets"); %>
    <!-- Se quiser fazer um CSS personalizado desta pagina-->
    
    <link href="/public/assets/css/atendimento.css" rel="stylesheet"/>
    <title>titulo</title>  <!--Não se esqueça de alterar o nome do titulo-->
</head>
<body>
    <%- include("includes/menubar"); %>
    <div class="main">
        

        <div class="tagvariaveis  elementoinvisivel"> 
            <span class="jsatendimento_campo_pagina_atual"><%= jsatendimento_campo_pagina_atual %></span>
            <span class="jsatendimento_campo_pagina_quantidade"><%= jsatendimento_campo_pagina_quantidade %></span>
            <span class="jsatendimento_campo_quantidade_total"><%= jsatendimento_campo_quantidade_total %></span>
            <span class="jsatendimento_campo_movimento_filtro"><%= movimento_dia_html %></span>
            <span class="jsatendimento_qtd_items">0</span>
        </div>
        <div class="">
            <h1>Itens de fechamento</h1>
            <div class="atendimento_itens_fechamento jsatendimento_itens_fechamento">
                
            </div>
        </div>

        <div class="atendimento_pedidos">
            <h1>Pedidos</h1>
            <div class="">
                
                <div class="divflexvertical  atendimento_filtros">
                    <div class="atendimento_grupo_label_input">
                        <label>Busca</label>
                        <input type="text" class="js_atendimento_campo_busca">
                    </div>
                    <div class="atendimento_grupo_label_input">
                        <label>Com entrega</label>
                        <input type="checkbox" checked="checked" class="js_atendimento_campo_comentrega">
                    </div>
                    <div class="atendimento_grupo_label_input">
                        <label>Retirar no local</label>
                        <input type="checkbox" checked="checked" class="js_atendimento_campo_sementrega">
                    </div>
                    <div class="atendimento_grupo_label_input">
                        <label>Pedido normal</label>
                        <input type="checkbox" checked="checked" class="js_atendimento_campo_estadonormal">
                    </div>
                    <div class="atendimento_grupo_label_input">
                        <label>Pedido cancelado</label>
                        <input type="checkbox" class="js_atendimento_campo_estadocancelado">
                    </div>
                    <div class="atendimento_grupo_label_input">
                        <label>Concluído</label>
                        <input type="checkbox" class="js_atendimento_campo_fase_concluido">
                    </div>
                </div>
                <div class="atendimento_styleclass_divtabela">
                    <table class="js_atendimento_tabela_table tabelas atendimento_tabela">
                        <tr>
                            <th>Pedido</th>
                            <th>Cliente</th>
                            <th>Telefone</th>
                            <th>Celular</th>
                            <th>Email</th>
                            <th>Entrega</th>
                            <th>Estado do pedido</th>
                            <th>Fase</th>
                            <th>Ações</th>
                        </tr>
                        <tr class="atendimento_tr"></tr>
                        <% if(locals.pedidos){ %>
                            <% pedidos.forEach(pedido =>{ %>
                                <tr class="atendimento_tr">
                                    <td><%= pedido.id %></td>
                                    <td><%= pedido.cliente.nome %></td>
                                    <td><%= pedido.cliente.telefone %></td>
                                    <td><%= pedido.cliente.celular %></td>
                                    <td><%= pedido.cliente.email %></td>
                                    <td><%= pedido.mododeentrega %></td>
                                    <td><%= pedido.estado %></td>
                                    <td><%= pedido.fase %></td>
                                    <td>
                                        <a href="/pedido/finalizar/<%= pedido.id %>" class="botao"> Finalizar</a>
                                        <a href="/pedido/<%= pedido.id %>" class="botao"> Editar</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </table>
                </div>
                <div class="atendimento_paginacao_div">
                    <ul class="paginacao js_atendimento_paginacao ">

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <%- include("includes/footer"); %>
</body>
</html>