<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("includes/assets"); %>
    <!-- Se quiser fazer um CSS personalizado desta pagina-->
    <link href="/public/assets/css/criarproduto.css" rel="stylesheet"/>
    <title>Adicionar Produto</title>  <!--Não se esqueça de alterar o nome do titulo-->
  </head>
  <body>
    <div class="main">
      <%- include("includes/menubar"); %>
      <div class="div_unica">
	    <div class="cadastrarusuario div_form">
        <h1>Adicionar Produto</h1> 
        <hr> 
        <form method="post" action="/produto/efetuarcadastro" class="class-form-produto" autofill="off">
            <div class="form-group">
                <span class="erros" name="erros"></span>
            </div>
        
	        <div class="form-group">
              
                <label for="nome">Nome:</label>
                <span class="erros" name="nome"></span>
                <input type="text" name="nome" class="form-control">
	        </div>
            <div class="form-group">
              
                <label for="preco">Preço:</label>
                <span class="erros" name="preco"></span>
                <input type="text" name="preco" class="form-control">
	        </div>
            <div class="form-group">
                <label for="fechamento">Item de Fechamento:</label>
                <select name="fechamento">
                    <option   value="SIM">Sim</option>
                    <option   value="NAO">Não</option>
                </select>
	        </div>
          <div class="form-group">
            <label for="unidade_parcial">Unidade parcial:</label>
            <select name="unidade_parcial">
                <option   value="SIM">Sim</option>
                <option   value="NAO">Não</option>
            </select>
          </div>
            <div class="form-group">

                <label for="categoria">Categoria:</label>
                <span class="erros" name="categoria"></span>
                <% if(locals.categoria) { %>
                    <select name="categoria">
                    <% categoria.forEach(categoria => { %>
                        <%= categoria.nome %>
                        <option   value="<%= categoria.id %>"><%= categoria.nome %></option>
                    <% }) %>
                    </select>
                <% } %>
	        </div>
            <button class="botao">Cadastrar</button>
          </form>
	</div>
      </div>
    </div>
    <%- include("includes/footer"); %>
  </body>
</html>
